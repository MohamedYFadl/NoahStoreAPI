@model IEnumerable<IdentityRole>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Roles Management</h2>
    <a asp-action="Upsert" asp-controller="Role" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add New Role
    </a>
</div>
<div class="card mt-4">
    <div class="card-header">
        <h5 class="card-title mb-0">All Roles</h5>
    </div>
    @if(Model.Count() > 0)
    {
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center" width="50%">@Html.DisplayNameFor(R => R.Id)</th>
                            <th class="text-center">@Html.DisplayNameFor(R => R.Name)</th>
                            <th>Actions</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td class="text-center">@role.Id</td>
                                <td class="text-center">@role.Name</td>
                                <td class="text-center">
                                    <div class="btn-group " role="group">
                                        <a asp-action="Upsert" asp-route-id="@role.Id" asp-controller="Role" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a  class="btn btn-sm btn-outline-danger" title="Delete" asp-action="Delete" asp-route-id="@role.Id" asp-controller="Role">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card-body">
            <h3 class="text-warning">There is no roles</h3>
        </div>
    }
</div>

