@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Delete role</h2>
    <a asp-action="Index" asp-controller="Role" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to roles
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">

                <h5 class="card-title mb-0"> Delete Role</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="text" asp-for="Id" hidden />
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="form-label">Role Name</label>
                                <input asp-for="Name" type="text" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary" asp-action="Delete" asp-controller="Role">
                            <i class="fas fa-save me-2"></i>Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

